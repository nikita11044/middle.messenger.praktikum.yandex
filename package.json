{
  "name": "telechat",
  "version": "0.0.1",
  "scripts": {
    "eslint": "eslint \"**/*.ts\" --ignore-pattern node_modules/\n\n",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "stylelint": "stylelint src/**/*.scss",
    "stylelint:fix": "npx stylelint src/**/*.scss --fix",
    "serve": "webpack serve --mode=development --progress",
    "dev": "webpack --mode=development",
    "build": "webpack --mode=production",
    "start": "npm run build && node ./server.js",
    "test": "mocha spec ./src/core/test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/jsdom": "16.2.14",
    "@types/mocha": "9.1.1",
    "@types/sinon": "10.0.12",
    "@types/sinon-chai": "3.2.8",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "chai": "4.3.6",
    "css-loader": "6.7.1",
    "eslint": "8.17.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "express": "4.18.1",
    "handlebars-loader": "1.7.2",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.1",
    "jsdom": "20.0.0",
    "mocha": "10.0.0",
    "sass": "^1.53.0",
    "sass-loader": "13.0.2",
    "sinon": "14.0.0",
    "sinon-chai": "3.7.0",
    "style-loader": "3.3.1",
    "stylelint": "14.9.1",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-scss": "4.3.0",
    "ts-loader": "9.3.1",
    "ts-node": "10.9.1",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.7.3",
    "webpack": "5.73.0",
    "webpack-cli": "4.10.0"
  },
  "dependencies": {
    "handlebars": "4.7.7",
    "uuid": "8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run eslint:fix npm run stylelint && npm run stylelint:fix && npm run test"
    }
  }
}
