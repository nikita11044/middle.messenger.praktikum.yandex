{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types", "typings/layout.d.ts"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
  }
}
